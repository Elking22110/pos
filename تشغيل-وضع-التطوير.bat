@echo off
chcp 65001 >nul
echo ========================================
echo    تشغيل نظام إدارة المبيعات (وضع التطوير)
echo ========================================
echo.

echo [1/3] التحقق من التبعيات...
if not exist "node_modules" (
    echo ⚠️  التبعيات غير مثبتة. سيتم التثبيت الآن...
    call npm install
    if %errorlevel% neq 0 (
        echo ❌ فشل في تثبيت التبعيات
        pause
        exit /b 1
    )
    echo ✓ تم تثبيت التبعيات بنجاح
    echo.
) else (
    echo ✓ التبعيات جاهزة
    echo.
)

echo [2/3] بدء الخادم في وضع التطوير...
echo ✓ بدء تشغيل الخادم على http://localhost:5173
echo.
echo ========================================
echo    التطبيق يعمل الآن في المتصفح! 🎉
echo ========================================
echo.
echo ملاحظات مهمة:
echo - سيتم فتح التطبيق في المتصفح تلقائياً
echo - العنوان: http://localhost:5173
echo - هذا وضع التطوير مع إعادة التحميل التلقائي
echo - يمكنك إغلاق هذه النافذة لإيقاف الخادم
echo - هذا الحل أكثر استقراراً من Electron
echo.

echo [3/3] تشغيل الخادم...
call npm run dev
if %errorlevel% neq 0 (
    echo ❌ فشل في تشغيل الخادم
    echo.
    echo جرب الحلول التالية:
    echo 1. تأكد من تثبيت Node.js
    echo 2. تحقق من أن المنفذ 5173 غير مستخدم
    echo 3. أعد تشغيل الكمبيوتر
    echo.
    pause
    exit /b 1
)

echo.
echo تم إيقاف الخادم
pause
